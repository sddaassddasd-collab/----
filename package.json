{
  "name": "multiplayer-slot-machine",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch server/src/index.ts",
    "build": "tsc -p server/tsconfig.json",
    "start": "node server/dist/server/src/index.js",
    "client:dev": "npm --prefix client run dev",
